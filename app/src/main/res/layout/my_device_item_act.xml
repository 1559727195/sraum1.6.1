<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEFF2"
    android:orientation="vertical">

    <com.yanzhenjie.statusview.StatusView
        android:id="@+id/status_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:fitsView="@+id/root_layout" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:paddingRight="40dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/project_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="水浸传感器"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <!--<TextView-->
        <!--android:id="@+id/next_step_txt"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:layout_marginRight="@dimen/x8"-->
        <!--android:layout_marginTop="8dp"-->
        <!--android:text="下一步"-->
        <!--android:textSize="14sp"-->
        <!--android:textColor="@color/blue_txt"-->
        <!--/>-->

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/wangguan_set_rel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="3dp"
        android:paddingTop="5dp">

        <ImageView
            android:id="@+id/wangguan_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/wangguan_set"
            android:orientation="vertical">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/device_name_txt"
                android:layout_centerInParent="true"
                android:text="水浸传感器"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:id="@+id/gateway_id_txt"
                android:text=""
                android:textSize="14sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_you" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="4px"
        android:layout_marginLeft="@dimen/p17"
        android:layout_marginRight="@dimen/p17"
        android:background="@drawable/bg_dash_line"
        android:layerType="software" />

    <RelativeLayout
        android:id="@+id/basic_information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp"
        android:paddingLeft="3dp"
        android:paddingTop="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="状态"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/status_txt"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="离线"
            android:textColor="@color/black"
            android:textSize="12sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="4px"
        android:layout_marginLeft="@dimen/p17"
        android:layout_marginRight="@dimen/p17"
        android:background="@drawable/bg_dash_line"
        android:id="@+id/view_yaokongqi"
        android:visibility="gone"
        android:layerType="software" />
    <RelativeLayout
        android:id="@+id/rel_yaokongqi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:paddingBottom="12dp"
        android:paddingLeft="3dp"
        android:paddingTop="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="遥控器"
            android:textColor="#000000" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/bg_you" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/device_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:paddingBottom="12dp"
        android:paddingLeft="3dp"
        android:paddingTop="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="房间"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/room_img_you"
            android:text="客厅"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/room_img_you"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/bg_you" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="4px"
        android:layout_marginLeft="@dimen/p17"
        android:layout_marginRight="@dimen/p17"
        android:background="@drawable/bg_dash_line"
        android:layerType="software" />

    <RelativeLayout
        android:id="@+id/scene_list_rel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp"
        android:paddingLeft="3dp"
        android:paddingTop="12dp">
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="其他信息"
            android:textColor="#000000" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/other_jiantou"
            android:layout_marginRight="10dp"
            android:src="@drawable/bg_you" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="4px"
        android:layout_marginLeft="@dimen/p17"
        android:layout_marginRight="@dimen/p17"
        android:background="@drawable/bg_dash_line"
        android:layerType="software" />

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:visibility="gone"
        android:id="@+id/list_gujian_rel"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/first_rel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            app:layout_widthPercent="80%">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:id="@+id/dev_txt"
                android:layout_marginLeft="10dp"
                android:text="设备版本"
                android:textColor="#000000" />


            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/banben_txt"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="v1.1.1"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </RelativeLayout>

        <View
            android:id="@+id/view_first"
            android:layout_width="match_parent"
            android:layout_height="4px"
            android:layout_below="@+id/first_rel"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_dash_line"
            android:layerType="software"
            app:layout_widthPercent="95%" />

        <RelativeLayout
            android:id="@+id/second_rel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_first"
            android:layout_centerHorizontal="true"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            app:layout_widthPercent="80%">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="MAC"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:id="@+id/mac_txt"
                android:text="29:91:AB:93:11"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </RelativeLayout>

        <View
            android:id="@+id/view_second"
            android:layout_width="match_parent"
            android:layout_height="4px"
            android:layout_below="@+id/second_rel"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_dash_line"
            android:layerType="software"
            app:layout_widthPercent="95%" />

        <RelativeLayout
            android:id="@+id/third_rel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_second"
            android:visibility="gone"
            android:layout_centerHorizontal="true"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            app:layout_widthPercent="80%">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="PAN ID"
                android:textColor="#000000" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:id="@+id/panid_txt"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="0xFFFF"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </RelativeLayout>

        <View
            android:id="@+id/view_third"
            android:layout_width="match_parent"
            android:layout_height="4px"
            android:visibility="gone"
            android:layout_below="@+id/third_rel"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_dash_line"
            android:layerType="software"
            app:layout_widthPercent="95%" />

        <RelativeLayout
            android:id="@+id/four_rel"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_third"
            android:layout_centerHorizontal="true"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            app:layout_widthPercent="80%">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="信道"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="1"
                android:id="@+id/xindao_txt"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </RelativeLayout>

        <View
            android:id="@+id/view_four"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="4px"
            android:layout_below="@+id/four_rel"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_dash_line"
            android:layerType="software"
            app:layout_widthPercent="95%" />

    </android.support.percent.PercentRelativeLayout>

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/delete_device_rel"
        android:layout_marginTop="30dp">
        <Button
            android:id="@+id/next_step_id"
            app:layout_widthPercent="80%"
            android:layout_height="@dimen/d30"
            android:textSize="@dimen/s13"
            android:text="删除设备"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            android:background="@drawable/graylinerecra"/>
    </android.support.percent.PercentRelativeLayout>

</LinearLayout>